<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rLayoutBelowrLayoutProfile_profilenew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/create_profile_image" >

        
        
        <com.deal.monk.profileimg.RoundedImageView
                 android:id="@+id/imageView_round"
                 android:layout_width="100dp"
                 android:layout_height="100dp"                
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:layout_marginBottom="70dp"
                 android:layout_marginTop="50dp"                 
                 android:src="@drawable/userphoto128" />

        <View
            android:id="@+id/viewAboveEmailId_profilenew"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView_round"
            android:alpha="0.70"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/lLayoutEmailID_profilenew"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/viewAboveEmailId_profilenew"
            android:gravity="right"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/inside_lLayoutEmailID_profilenew"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/email32w" />

                <TextView
                    android:id="@+id/tvEmailID_profilenew"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint=""
                    android:minHeight="40dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"             
                    android:textSize="18sp"
                    android:typeface="normal" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewBelowEmailID_profilenew"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lLayoutEmailID_profilenew"
            android:alpha="0.70"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/lLayoutFirstNameLastName_profilenew"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/viewBelowEmailID_profilenew"
            android:gravity="right"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/inside_lLayoutFirstNameLastName_profilenew"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgUserlogo_profilenew"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/user32w" />

                <TextView
                    android:id="@+id/tvFirstName_profilenew"
                    android:layout_width="10dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1.9"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:minHeight="40dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <View
                    android:id="@+id/viewInBetweenlLayoutFirstNameLastName_profilenew"
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.05"
                    android:alpha="0.45"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/tvLastName_profilenew"
                    android:layout_width="10dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:ems="10"
                    android:minHeight="40dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="18sp"
                    android:typeface="normal" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewBelowFirstNameLastName_profilenew"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lLayoutFirstNameLastName_profilenew"
            android:alpha="0.70"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/lLayoutPhone_profilenew"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/viewBelowFirstNameLastName_profilenew"
            android:gravity="right"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/inside_lLayoutPhone_profilenew"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/contact32w" />

                <TextView
                    android:id="@+id/tvPhone_profilenew"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:minHeight="40dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="18sp"
                    android:typeface="normal" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewBelowPhone_profilenew"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lLayoutPhone_profilenew"
            android:alpha="0.70"
            android:background="#ffffff" />

    </RelativeLayout>

</RelativeLayout>
